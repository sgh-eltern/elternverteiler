<section class="sgh-elternverteiler-schüler">
  <h2>Schüler</h2>

  <p>
    <a href="/schüler/neu" class="pure-button pure-button-primary">Anlegen</a>
  </p>

  <table class="pure-table pure-table-horizontal pure-table-striped sgh-elternverteiler-schüler">
    <thead>
      <tr>
        <th>Nachname</th>
        <th>Vorname</th>
      <% if local_variables.include?(:with_details) && with_details %>
        <th>Klasse</th>
        <th>Eltern</th>
      <% end %>
      </tr>
    </thead>

    <tbody>

    <% schueler.each do |sch| %>
      <tr>
        <td>
          <a name="<%= sch.nachname&.chars&.first %>"/>
          <a href="/schüler/<%= sch.id %>"><%= sch.nachname %></a>
        </td>
        <td>
          <a href="/schüler/<%= sch.id %>"><%= sch.vorname %></a>
        </td>
      <% if local_variables.include?(:with_details) && with_details %>
        <td>
          <%== link_to(sch.klasse) %>
        </td>
        <td>
          <% sch.eltern.each do |elternteil| %>
            <a href="/eltern/<%= elternteil.id %>"><%= elternteil %></a><br/>
          <% end %>
        </td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
  </table>
</section>
