<%== partial('email') %>

<table class="pure-table pure-table-horizontal pure-table-striped">
  <thead>
    <tr>
      <th>Nachname</th>
      <th>Vorname</th>
      <th>Ämter</th>
      <th>eMail</th>
      <th class="no-print"></th>
    </tr>
  </thead>

  <tbody>

  <% @eltern.each do |elternteil| %>
    <tr>
      <td><%= elternteil.nachname %></td>
      <td><%= elternteil.vorname %></td>
      <td><%= elternteil.ämter.join(', ') %></td>
      <td>
        <% if elternteil.mail %>
          <a href="mailto:<%= elternteil.mail %>"><%= elternteil.mail %></a>
        <% else %>
          <%= elternteil.mail %>
        <% end %>
      </td>
      <td class="no-print">
        <a href="/eltern/<%= elternteil.id %>/edit">Bearbeiten</a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
