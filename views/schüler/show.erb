<table class="pure-table pure-table-horizontal sgh-elternverteiler-schüler">
  <tr>
    <th style="border-left-style: hidden; border-right-style: hidden; border-top-style: hidden; text-align: left;" colspan=2><h2>Stammdaten</h2></th>
  </tr>

  <tr>
    <th style="background-color: #f2f2f2; text-align: right;">Nachname</th>
    <td><%= @schüler.nachname %></td>
  </tr>

  <tr>
    <th style="background-color: #f2f2f2; text-align: right;">Vorname</th>
    <td><%= @schüler.vorname %></td>
  </tr>

  <tr>
    <th style="background-color: #f2f2f2; text-align: right;">Klasse</th>
    <td>
      <%== link_to(@schüler.klasse) %>
    </td>
  </tr>

  <tr>
    <th valign="top" style="background-color: #f2f2f2; text-align: right;">Eltern</th>
    <td>
      <% @schüler.eltern.each do |paren| %>
        <a href="/eltern/<%= paren.id %>"><%= paren %></a><br/>
      <% end %>
      <p>
        <a href="/schüler/<%= @schüler.id %>/erziehungsberechtigter/add">Hinzufügen</a>
      </p>
    </td>
  </tr>

  <%== partial('meta', locals: {item: @schüler}) %>
</table>

<form action="/schüler/<%= @schüler.id %>/delete" class="pure-form pure-form-aligned sgh-elternverteiler-schüler-form" method="post">
<p>
  <a href="/schüler/<%= @schüler.id %>/edit" class="pure-button pure-button-primary">Bearbeiten</a>
  <input class="pure-button button-destructive"
         type="submit"
         value="Löschen"
         onclick="return confirm('Sind Sie sicher, daß Sie den Schüler <%= @schüler %> löschen möchten?')"
  />
</p>
</form>
