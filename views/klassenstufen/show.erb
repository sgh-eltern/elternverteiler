<table class="pure-table pure-table-horizontal sgh-klassenstufenverteiler-klassenstufe">
  <tr>
    <th style="border-left-style: hidden; border-right-style: hidden; border-top-style: hidden; text-align: left;" colspan=2><h2>Stammdaten</h2></th>
  </tr>

  <tr>
    <th style="background-color: #f2f2f2; text-align: right;">Name</th>
    <td><%= @klassenstufe.name %></td>
  </tr>

  <tr>
    <th valign="top" style="background-color: #f2f2f2; text-align: right;">Klassen</th>
    <td>
      <% @klassenstufe.klassen.sort.each do |klasse| %>
        <%== link_to(klasse) %>
        <br/>
      <% end %>
    </td>
  </tr>

  <%== partial('statistik', locals: { item: @klassenstufe }) %>
  <%== partial('meta', locals: { item: @klassenstufe }) %>
</table>

<form action="/klassenstufen/<%= @klassenstufe.id %>/delete" class="pure-form pure-form-aligned" method="post">
<p>
  <a href="/klassenstufen/<%= @klassenstufe.id %>/edit" class="pure-button pure-button-primary">Bearbeiten</a>
  <input class="pure-button button-destructive"
         type="submit"
         value="Löschen"
         onclick="return confirm('Sind Sie sicher, daß Sie die <%= @klassenstufe %> löschen möchten?')"
  />
</p>
</form>
